# Train Configuration
# The Bluetooth address of your LionChief train (leave empty for mock mode)
TRAIN_ADDRESS=

# Queue timeout in seconds (default: 300 = 5 minutes)
TRAIN_QUEUE_TIMEOUT=300

# Allow infinite control time when only one user in queue (default: true)
TRAIN_ALLOW_INFINITE_SINGLE=true

# API URL (used by UI to connect to API)
API_URL=http://localhost:8000

# Admin password for control configuration (leave empty for no password)
ADMIN_PASSWORD=
